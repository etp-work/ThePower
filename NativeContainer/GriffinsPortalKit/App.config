<?xml version="1.0"?>
<configuration>
    <configSections>
      <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler"/>
    </configSections>
    <startup>
      <supportedRuntime version="v2.0.50727"/>
    </startup>
    <appSettings>
      <add key="ServerAddress" value="127.0.0.1"/>
      <add key="ServerPort" value="58888"/>
      <add key="ServerUrl" value="/"/>
      <add key="ServerFullUrl" value="http://127.0.0.1:58888/PortalKit/"/>
      <add key="WebSocketPort" value="58887"/>
      <add key="WebSocketUri" value="ws://127.0.0.1:58887"/>
      <add key="RemoteControlUrl" value="http://127.0.0.1:58888/PortalKit/templates/remote/rc.html"/>
      <add key="WindowWidth" value="453"/>
      <add key="WindowHeight" value="544"/>
      <add key="RemoteControlWidth" value="300"/>
      <add key="RemoteControlHeight" value="538"/>
      <add key="PortalAddress" value="127.0.0.1" />
      <add key="PortalPort" value="8080" />
      <add key="PortalUrl_STBHTML" value="/portal-root-war/index_mock.html?deviceId=00:01:02:03:04:05&amp;type=plain" />
      <add key="PortalUrl_STBSVG" value="/portal-root-war/index_mock.svg?deviceId=00:01:02:03:04:05&amp;type=plain" />
    </appSettings>
    <log4net>
      <root>
        <level value="DEBUG"/>
        <appender-ref ref="FileAppender"/>
      </root>
      <appender name="FileAppender" type="log4net.Appender.FileAppender">
        <file value="./portalkit.log"/>
        <appendToFile value="true"/>
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%date [%thread] %-5level %logger - %message%newline"/>
        </layout>
      </appender>
    </log4net>
</configuration>
